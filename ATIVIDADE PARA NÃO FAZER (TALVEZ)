CREATE DATABASE LOJA
GO
USE LOJA
GO

CREATE TABLE PRODUTO(
ID INT NOT NULL PRIMARY KEY IDENTITY(1,1),
NOME VARCHAR(MAX),
DT_VALIDADE DATE,
PRECO DECIMAL
)

GO

CREATE TABLE ESTOQUE(
ID INT NOT NULL PRIMARY KEY IDENTITY(1,1),
QUANTIDADE INT,
ID_PRODUTO INT NOT NULL FOREIGN KEY REFERENCES PRODUTO(ID)
)

GO

CREATE TABLE VENDA(
ID INT PRIMARY KEY NOT NULL IDENTITY(1,1),
QUANTIDADE INT,
DT_VENDA DATE,
PRECO_FINAL DECIMAL,
ID_PRODUTO INT NOT NULL FOREIGN KEY REFERENCES PRODUTO(ID)
)

GO
